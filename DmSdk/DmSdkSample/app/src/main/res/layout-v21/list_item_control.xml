<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    app:cardUseCompatPadding="true"
    app:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_devicename_control"
            android:layout_width="@dimen/cardview_imageicon_width"
            android:layout_height="@dimen/cardview_imageicon_height"
            android:layout_marginLeft="@dimen/cardview_hardwareicon_margin"
            android:layout_marginTop="@dimen/cardview_hardwareicon_margin"
             />

        <TextView
            android:id="@+id/tv_devicename_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_devicename_control"
            android:layout_marginLeft="@dimen/cardview_hardwareicon_margin"
            android:layout_marginTop="@dimen/cardview_hardwareicon_deliver"
            android:text="@string/active_device"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tv_devicestatus_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/cardview_devicestatus_size"
            android:layout_below="@+id/tv_devicename_control"
            android:layout_marginLeft="@dimen/cardview_hardwareicon_margin"
            android:layout_marginTop="@dimen/cardview_hardwareicon_deliver"
            android:text="@string/active_device_close"
            android:textColor="@android:color/darker_gray" />

        <ImageView
            android:id="@+id/iv_devicestatus_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/cardview_hardwareicon_margin"
            android:layout_marginTop="@dimen/cardview_hardwareicon_margin"
            android:src="@drawable/icon_signal_gray" />

        <TextView
            android:id="@+id/tv_devicepolicy_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="@dimen/cardview__devicepolicy_size"
            android:layout_below="@+id/tv_devicename_control"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/cardview_hardwareicon_margin"
            android:text="@string/Security_policy_blocked"
            android:textColor="@android:color/holo_red_dark" />
    </RelativeLayout>
</android.support.v7.widget.CardView>